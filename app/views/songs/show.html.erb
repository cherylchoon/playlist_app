<div class="container">
  <div class="col-md-8">
    <h3>Others who added <%= "#{@song.artist} - #{@song.title}" %></h3>
    <table class="table table-striped">
      <thead>
        <th>Name</th>
        <th>Times Added</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><a href="/users/<%= user.id %>"><%= "#{user.first_name} #{user.last_name}" %></a></td>
            <td><%= user.playlist_songs.where("song_id=?", @song.id).count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
